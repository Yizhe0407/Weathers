generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  email_address String?   @unique

  county        County?   @relation(name: "CountyToUser", fields: [countyId], references: [id])
  countyId      Int?      @unique  
}

model County {
  id     Int       @id @default(autoincrement())
  name   String   

  user   User?     @relation(name: "CountyToUser")

  towns  Town[]
}

model Town {
  id      Int      @id @default(autoincrement())
  name    String

  county  County   @relation(fields: [countyId], references: [id])
  countyId Int
}
